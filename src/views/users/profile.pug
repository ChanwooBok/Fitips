extends ../base 
include ../mixins/video 

block content 
    div.profile__data
        if loggedInUser.socialOnly
            img(src=user.avatarUrl).avatar
        else
            img(src="/" + user.avatarUrl).avatar
        h3=user.name 
    div.video-grid 
        each potato in user.videos
            +apple(potato)
        else 
            span.empty__message No videos found
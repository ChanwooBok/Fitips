extends base 

block content 
    if errorMessage 
        span=errorMessage
    h1 log in 
    form(method="POST")
        input(type="text" placeholder="ID" name="username")
        input(type="password" placeholder="password" name="password")
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span Not a member yet?
        a(href="/join") Create one  now &rarr;
    li 
    a(href="passwordMissing") forgot password? click here!
    